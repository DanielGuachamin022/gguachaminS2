<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gguachaminS2.Vistas.Login">
    <VerticalStackLayout
        Spacing="25"
        Padding="30">
        <Label 
            Text="Inicio de sesión"
            HorizontalTextAlignment="Center"
            FontSize="20"
            TextColor="Red"/>
        <Image Source="https://lh3.googleusercontent.com/proxy/9k7gv3Xjr1pVbCeQDxmxmwYHZ_-V2F2PG_ZNcyeWhLN1mSTMiNzSuCGrg9Dh1JF2IQ"
               HeightRequest="100"/>
        <Image Source="imageninicio.png"
               HeightRequest="100"/>
        <Entry x:Name="TxtUsuario"
               Placeholder="Ingrese su usuario"
               MaxLength="7"/>
        <Entry x:Name="TxtContrasena"
               Placeholder="Ingrese su contraseña"
               IsPassword="True"/>
        <Button x:Name="btnInicio"
                Text="Iniciar sesión"
                Clicked="btnInicio_Clicked"/>
    </VerticalStackLayout>
</ContentPage>