<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gguachaminS2.Vistas.Elementos">
    <VerticalStackLayout>
        <Label x:Name="lblUsuario"
               TextColor="Red"
               FontSize="14"
               HorizontalTextAlignment="End"/>
        <Label 
            Text="Elementos Visuales MAUI"
            TextColor="Blue"
            FontSize="24"
            HorizontalTextAlignment="Center"/>
        <Picker x:Name="pkCiudades"
                Title="Ciudades">
            <Picker.Items>
                <x:String>Quito</x:String>
                <x:String>Guayaquil</x:String>
                <x:String>Manta</x:String>
                <x:String>Cuenca</x:String>
            </Picker.Items>
        </Picker>
        <Button x:Name="btnPicker"
                Text="Ver elemento seleccionado"
                Clicked="btnPicker_Clicked"/>
        <Label x:Name="lblDatoPicker"
               FontSize="18"
               TextColor="Blue"/>
        <DatePicker x:Name="dpFecha"
                    Date="04/08/2024"
                    Format="MM/dd/yyyy"/>
        <Button x:Name="btnFechas"
                Text="Ver fecha seleccionada"
                Clicked="btnFechas_Clicked"/>
    </VerticalStackLayout>
</ContentPage>